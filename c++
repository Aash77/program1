#include <iostream> 
using namespace std; 
  
int main()  
{  
    int integerType;  
    char charType;  
    float floatType;  
    double doubleType;  
  
    
    cout << "Size of int is: " " bytes<<  
    sizeof(integerType) <<"\n";  
  
 
    cout << "Size of char is: "  " bytes<<  
    sizeof(charType) <<"\n";  
        
    cout << "Size of float is: "  " bytes<<  
    sizeof(floatType) <<"\n"; 
  
   
    cout << "Size of double is: "  " bytes<<  
    sizeof(doubleType) <<"\n";  
  
    return 0;  
}  
